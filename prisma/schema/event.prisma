// prisma/schema.prisma
model Event {
    id              String      @id @default(uuid())
    name            String
    type            String
    description     String      @db.Text
    date            DateTime
    location        String
    minParticipants Int? // <-- ei ? ta add kor! (nullable)
    maxParticipants Int
    joiningFee      Float       @default(0)
    imageUrl        String?
    status          EventStatus @default(OPEN)
    hostId          String
    host            User        @relation("HostedEvents", fields: [hostId], references: [id], onDelete: Cascade)
    createdAt       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt

    bookings Booking[]
    reviews  Review[]

    @@index([hostId])
    @@index([date])
    @@index([status])
    @@map("events")
}
